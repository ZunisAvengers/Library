@using LibraryAspNetCore.Models
@model LibraryAspNetCore.Models.Cart
@{
    ViewData["Title"] = "View";
}

<h2>Ваши заказы из Библиотеки </h2>
<form asp-action="Order" asp-controller="Cart" method="post">
    <h3>Выберете когда вы заберёте книги:</h3>
    <input type="datetime-local" />
    <input value="Заказать!!" type="submit"/>
</form>
<table class="table">
    <tr>
        <td>Название</td>
        <td></td>
    </tr>
    @foreach (var item in Model.BookCarts)
    {
        <tr>
            <td><a asp-controller="Home" asp-action="Info" asp-route="@item.Book.Book.Id"><div class="btn btn-default">@item.Book.Book.Name</div></a></td>
            <td>
                <a asp-controller="Cart" asp-action="RemoveCart" asp-route="@item.Book.Book.Id"><div class="btn btn-danger">Удалить из корзины</div></a>
            </td>
        </tr>
    }
</table>

