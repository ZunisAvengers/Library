@model LibraryAspNetCore.ViewModels.LoginModel
@{
    ViewData["Title"] = "Login";
}

<h3>Войти</h3>
<form asp-action="Login" asp-controller="Account" method="post">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <table>
        <tr><td><label asp-for="Login">Введите ваш Login</label></td><td><input type="text" asp-for="Login" /></td><td><span asp-validation-for="Login" /></td></tr>
        <tr><td><label asp-for="Password">Введите ваш пароль</label></td><td><input type="password" asp-for="Password" /></td><td><span asp-validation-for="Password" /></td></tr>
    </table>
    <input type="submit" value="Войти" />
</form>