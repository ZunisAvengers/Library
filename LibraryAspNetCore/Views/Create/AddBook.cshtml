@model LibraryAspNetCore.ViewModels.AddBookViewModel

@{
    ViewData["Title"] = "AddBook";
}

<h2>AddBook</h2>

<h4>Book</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddBook" id="bookform">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="AuthorsId" class="control-label"></label>
                <select asp-for="AuthorsId" class="form-control" asp-items="ViewBag.Authors"><option selected value="00000000-0000-0000-0000-000000000000" accesskey="00000000-0000-0000-0000-000000000000">Выберете Автора</option></select>
            </div>
            <div class="form-group" id="AuthorNameLabel">
                <label asp-for="AuthorsName" class="control-label" ></label>
                <input asp-for="AuthorsName" class="form-control" />
            </div>



            <div class="form-group">
                <label asp-for="PublishingHouseId" class="control-label"></label>
                <select asp-for="PublishingHouseId" class="form-control" asp-items="ViewBag.PublishingHouses"><option selected value="@Guid.Empty">Выберете Издательство</option></select>
            </div>
            <div class="form-group">
                <label asp-for="YearOfPublishing" class="control-label"></label>
                <input asp-for="YearOfPublishing" type="datetime-local" class="form-control" />
                <span asp-validation-for="YearOfPublishing" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SubjectId" class="control-label"></label>
                <select asp-for="SubjectId" class="form-control" asp-items="ViewBag.Subjects"><option selected value="@Guid.Empty">Выберете Жанр</option></select>
            </div>
            <div class="form-group">
                <label asp-for="ISBN" class="control-label"></label>
                <input asp-for="ISBN" class="form-control" />
                <span asp-validation-for="ISBN" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Image" class="control-label"></label>
                <input type="file" asp-for="Image"/>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
<script>
    const autors = document.forms.bookform['AuthorsId'];
    const authorInputLabel = document.getElementById('AuthorNameLabel');
    const authorInput = document.forms.bookform['AuthorsName'];
    const hiddenAuthorInput = false;
    autors.addEventListener('change', (event) => {
        authorInputLabel.style.display = (event.target.value !== "00000000-0000-0000-0000-000000000000") ? "none" : "block"

    });
</script>
