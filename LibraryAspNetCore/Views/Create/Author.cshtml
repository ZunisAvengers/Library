@model IEnumerable<LibraryAspNetCore.Models.Author>
@{
}
<div>
    <div style="float:right">
        <h3 style="margin-left:40%">Все Категории</h3>
        <table class="table">
            <tr><td width="400">Название</td><td></td></tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td><a asp-action="EditAuthor" asp-controller="Create" asp-route-id="@item.Id"><div class="btn btn-success">Изменить</div></a></td>
                </tr>
            }
        </table>
    </div>
    <br />
    <form asp-action="Author" asp-controller="Create" method="post">
        <label class="Name">Введите Имя и Фамилию автора</label><br />
        <input type="text" class="Name" name="Name" /><br /><br />
        <input type="submit" value="Добваить категорию" class="btn btn-default" /><br />
    </form>
</div>